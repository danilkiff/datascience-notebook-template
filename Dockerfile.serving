FROM python:3.12-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc libpq-dev wget ca-certificates curl \
 && rm -rf /var/lib/apt/lists/*

COPY requirements/serving.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

COPY scripts/serve-model.sh /usr/local/bin/serve-model.sh
RUN chmod +x /usr/local/bin/serve-model.sh

RUN useradd -r -s /bin/false appuser
USER appuser

EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/serve-model.sh"]
